<div class="container">
  <h1> Tous nos cocktails </h1>
  <ul>
    <% @cocktails.each do |c| %>
    <li>
       <%= link_to c.name, cocktail_path(c) %>
       <%= link_to edit_cocktail_path(c) do %>
        <i class="fas fa-edit"></i>
       <% end %>
       |
       <% link_to cocktail_path(c), method: :delete, data: { confirm: 'Sure ?'} do %>
        <i class="fas fa-edit"></i>
       <% end %>
    </li>
    <% end %>
  </ul>
  <%= link_to 'Add a cocktail', new_cocktail_path %>
</div>
